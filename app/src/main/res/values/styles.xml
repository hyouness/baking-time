<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScrollbarStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarThumbVertical">@color/scrollbarColor</item>
        <item name="android:scrollbarFadeDuration">3000</item>
    </style>

    <style name="StepActionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
</resources>
