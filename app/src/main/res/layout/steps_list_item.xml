<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/step_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/recipe_step_gradient">

    <TextView
        android:id="@+id/step_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8.5"
        android:gravity="start"
        android:layout_marginTop="0dp"
        android:padding="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:textSize="@dimen/details_text_size"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1. Melt butter and bittersweet chocolate." />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/arrow_layout"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="@dimen/arrow_icon_size"
            android:layout_height="@dimen/arrow_icon_size"
            android:src="@drawable/arrow_selected_icon"
            android:layout_gravity="center"
            android:contentDescription="@string/arrow_icon" />
    </LinearLayout>

    <View
        android:id="@+id/step_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="#808080"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
